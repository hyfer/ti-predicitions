{
  parser: "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": false
  },
  "settings": {
    "import/extensions": [".js", ".jsx", ".scss"],
    "import/resolver": {
      "webpack": {
          "config": "webpack.config.js"
      }
    }
  },
  "rules": {
    "max-len": [1, 120, 2, {
      "ignoreComments": true,
      "ignoreStrings": true
    }],
    "react/prop-types": [2],
    "react/jsx-pascal-case": [2],
    "react/prefer-es6-class": [2],
    "react/no-multi-comp": [2],
    "react/jsx-closing-bracket-location": [2],
    "jsx-a11y/media-has-caption": [0]

  },
  "extends": "airbnb"
}